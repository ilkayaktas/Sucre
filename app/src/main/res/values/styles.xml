<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CheckBoxTintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/mobss_color_green</item>
    </style>

    <style name="EditTextTintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/mobss_color_primary_blue</item>
    </style>

    <style name="DialogTriggerButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
