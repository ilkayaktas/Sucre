<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="edu.metu.sucre.views.activities.home.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="89dp"
        app:layout_constraintLeft_toLeftOf="@+id/welcome"
        app:layout_constraintRight_toRightOf="@+id/welcome"
        app:srcCompat="@drawable/ic_microphone"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.478"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/mobss_color_white"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="99dp"
        android:layout_height="119dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:srcCompat="@drawable/ic_circle"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/resultView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_stroke"
        android:text="@string/tamam"
        android:textColor="@color/mobss_color_white"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="@+id/welcome"
        app:layout_constraintRight_toRightOf="@+id/welcome"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
</android.support.constraint.ConstraintLayout>
