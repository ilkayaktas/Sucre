<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/mobss_color_blue"
        android:fitsSystemWindows="true">


    <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/mobss_color_blue"
                app:layout_scrollFlags="scroll|enterAlways"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textColor="@color/mobss_color_white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textSize="34sp"
                        android:textStyle="bold"/>
                <ImageButton
                        android:id="@+id/toolbar_settings"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_settings"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="10dp"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <android.support.constraint.ConstraintLayout
            xmlns:custom="http://schemas.android.com/tools"
            android:id="@+id/main_constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_stroke"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <ImageView
                android:id="@+id/calendar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="@+id/main_constraint"
                app:layout_constraintStart_toStartOf="@id/main_constraint"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_calendar"
                android:onClick="onCalendarClicked"/>

        <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="@+id/main_constraint"
                app:layout_constraintEnd_toEndOf="@id/main_constraint"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_edit"
                android:onClick="onManualEntryButtonClicked"/>


        <android.support.constraint.ConstraintLayout
                android:id="@+id/mic_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/main_constraint"
                app:layout_constraintRight_toRightOf="@+id/main_constraint"
                app:layout_constraintTop_toBottomOf="@+id/calendar"
                app:layout_constraintBottom_toTopOf="@+id/toggleSwitch"
                android:layout_marginBottom="@dimen/mic_container_margin"
                android:onClick="onMicrophoneRingClicked"
                android:layout_gravity="center">

            <ImageView
                    android:id="@+id/microphone"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    app:layout_constraintBottom_toBottomOf="@+id/microphoneRing"
                    app:layout_constraintTop_toTopOf="@+id/microphoneRing"
                    app:layout_constraintRight_toRightOf="@+id/microphoneRing"
                    app:layout_constraintLeft_toLeftOf="@+id/microphoneRing"
                    app:srcCompat="@drawable/ic_microphone"/>


            <ImageView
                    android:id="@+id/microphoneRing"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_circle"/>
        </android.support.constraint.ConstraintLayout>

        <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                android:id="@+id/toggleSwitch"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                custom:activeBgColor="@color/md_blue_grey_900"
                custom:activeTextColor="@color/mobss_color_white"
                custom:cornerRadius="@dimen/button_corner_radius"
                custom:inactiveBgColor="@color/md_blue_grey_200"
                custom:inactiveTextColor="@color/mobss_color_white"
                custom:textToggleLeft="@string/pre"
                custom:textToggleRight="@string/post"
                custom:toggleWidth="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintLeft_toLeftOf="@id/main_constraint"
                app:layout_constraintRight_toRightOf="@id/main_constraint"
                app:layout_constraintBottom_toBottomOf="@id/main_constraint"/>

    </android.support.constraint.ConstraintLayout>


</android.support.design.widget.CoordinatorLayout>